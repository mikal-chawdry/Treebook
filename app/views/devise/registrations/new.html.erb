<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>
  <div><%= f.input :first_name %><br /></div>
	  
  <div><%= f.input :last_name %><br /></div>
	  
  <div><%= f.input :profile_name %><br /></div>

  <div><%= f.input :email %><br /></div>

  <div><%= f.input :password %><br /></div>

  <div><%= f.input :password_confirmation %><br /></div>

  <div><%= f.button :submit %></div>

<% end %>

<%= render "devise/shared/links" %>
